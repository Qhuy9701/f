<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
           <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
           <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <div class="header ">
        <img style="width:30%;height:20%;" src="https://cms.greenwich.edu.vn/pluginfile.php/1/theme_adaptable/logo/1627617472/RGB_Logo%20DH%20Greenwich%20%28VN%291.jpg"
        </div>
        <div class="container col-md-10 mt-3">
            {% for message in app.flashes ('Error')%}
                <p class="alert alert-danger">{{message}}</p>
            {% endfor %}
            
            {% for message in app.flashes ('Success')%}
                <p class="alert alert-primary">{{message}}</p>
            {% endfor %}
        </div>
        {% block header %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Admin <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{path('student_index')}}">Student</a>
                </li>    
                <li class="nav-item active">
                    <a class="nav-link" href="{{path('course_index')}}">Course</a>
                </li>       
                <li class="nav-item active">
                    <a class="nav-link" href="{{path('subject_index')}}">Subject</a>
                </li>        
                <li class="nav-item active">
                    <a class="nav-link" href="{{path('app_logout')}}">Logout</a>
                </li>                
    </ul>
  </div>
</nav>
        {% endblock %}

        {% block body %}
        {% endblock %}
        <br>
        <br>
        {% block footer %}
        {% endblock %}
    </body>
</html>
